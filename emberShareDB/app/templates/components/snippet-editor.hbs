<div class='snippet-editor'>
  <h3>{{snippet.title}}</h3>
  <form id='snippet-editor-form' {{action 'insert' snippet.fn on='submit'}}>
    <ul class='list-group new-user-group'>
      {{#each snippet.props as |prop|}}
        <li>
          <label for={{prop.name}}>{{prop.name}}</label>
          {{input
            class='login-input'
            id=prop.name
            placeholder=''
            name=prop.name
            value=prop.default
          }}
        </li>
      {{/each}}

      {{#if snippet.samples}}
        <div class='sample-btn-container'>
          {{#each snippet.samples as |sample|}}
            {{#bs-button
              (html-attributes aria-label='Insert Snippet')
              class='insert-sample-btn'
              onClick=(action 'addSample' sample)
            }}{{runFn sample.name}}{{/bs-button}}
          {{/each}}
        </div>
      {{/if}}
    </ul>
    <p><button
        class='snippet-editor-submit-btn'
        type='submit'
      >Insert</button></p>
    <p><button
        class='snippet-editor-submit-btn'
        {{action 'close'}}
      >Cancel</button></p>
  </form>
</div>
