<div class="uncharted-form-control">
    <div class="uncharted-token-main-container">
      <div class="uncharted-token-container">
        {{#if hasTokens}}
          <div></div>
        {{else}}
          <p class = "tokenfield-label">&lt;&mdash;{{placeholder}}</p>
        {{/if}}
        {{#each tokens as |token index|}}
            {{component tokenComponent
            token=token
            index=index
            canDelete=editable
            existingTokens=tokens
            allowDuplicates=allowDuplicates
            selectedTokenIndex=selectedTokenIndex
            createToken=(action 'createToken')
            removeToken=(action 'removeToken' token)
            mouseDown=(action 'selectToken' token index)
            doubleClick=(action 'editToken' token)}}
        {{/each}}
        <div class="tooltip">
          <span class="tooltiptext">{{placeholder}}</span>
          {{#if showInput}}
            {{#bs-button tabIndex = "0" class = "add-file-button" id = addButtonId
              icon="glyphicon glyphicon-chevron-up"
              onClick=(action 'addPressed')}}
            {{/bs-button}}
          {{else}}
            {{#bs-button tabIndex = "0" class = "add-file-button" id = addButtonId
              icon="glyphicon glyphicon-plus"
              onClick=(action 'addPressed')}}
            {{/bs-button}}
          {{/if}}
          </div>
          {{#if showInput}}
          {{input type='text'
              tabIndex = "0"
              class='uncharted-token-input'
              id=tokenfieldId
              placeholder=placeholder
              value=inputValue}}
          {{/if}}
        </div>

    </div>
</div>
{{#if showDuplicateMessage}}
    <p class="uncharted-duplicate-message">
        <span class="fa fa-exclamation-circle"></span>
        Duplicate values are not allowed
    </p>
{{/if}}
