      {{/ddm.item}}
    {{/dd.menu}}
  {{/nav.dropdown}}
  {{#nav.dropdown as |dd|}}
    {{#dd.toggle class = "nav-dropdown" }} learn <span class="caret"></span>{{/dd.toggle}}
    {{#dd.menu as |ddm|}}
      {{#ddm.item}}
      <a {{action 'gettingStarted'}} href = {{concat url "/getting-started/beginner"}}  class = "nav-button dropdown-item">getting started</a>
      {{/ddm.item}}
      {{#ddm.item}}
      <a {{action 'guides'}}  href = {{concat url "/guides/root"}} class = "nav-button dropdown-item">guides</a>
      {{/ddm.item}}
    {{/dd.menu}}
  {{/nav.dropdown}}
  {{#if session.isAuthenticated}}
    {{#nav.dropdown as |dd|}}
      {{#dd.toggle class = "nav-dropdown" }}my projects <span  class="caret"></span>{{/dd.toggle}}
      {{#dd.menu as |ddm|}}
        {{#each ownedDocuments as |doc|}}
        {{#ddm.item}}
            <a class="dropdown-item" {{action 'openDoc' doc.id}}>{{doc.name}}</a>
        {{/ddm.item}}
        {{/each}}
        <a id = "create-doc-dropdown-item" class="dropdown-item" {{action 'allDocs'}}>...</a>
        <a id = "create-doc-dropdown-item" class="dropdown-item" {{action 'createDoc'}}>+</a>
      {{/dd.menu}}
    {{/nav.dropdown}}
  {{/if}}
{{/if}}
{{/bs-nav}}
{{#if session.isAuthenticated}}
  <div id = "login-container">
    <div style = "float:right;" class="tooltip">
      <a {{action 'logout'}} id = "login-button" class="navbar-btn navbar-right pull-right">log out</a>
      <span class="tooltiptext">logged in as {{sessionAccount.currentUserName}}</span>
    </div>
  </div>
{{else}}
<div id = "login-container">
 <a {{action 'login'}} id = "login-button" class="navbar-right">sign up/log in</a>
</div>
{{/if}}
