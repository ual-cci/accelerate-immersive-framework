      {{/ddm.item}}

      {{#ddm.item}}
      <a {{action 'docs'}} href = {{concat url "/d/" sessionAccount.currentUserName "/views/0"}}  class = "nav-button dropdown-item">my projects</a>
      {{/ddm.item}}
    {{/dd.menu}}
