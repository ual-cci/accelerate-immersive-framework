<div id='mimic-navbar' class='blur-background'>
  <a {{action 'home'}} class='home-button'>home</a>
  {{#bs-nav type='pills' as |nav|}}
    {{#if mediaQueries.isBurger}}
      {{#nav.dropdown as |dd|}}
        {{#dd.toggle class='nav-dropdown burger-btn'}}
          â‰¡
          <span class='caret'></span>{{/dd.toggle}}
        {{#dd.menu as |ddm|}}
          {{#ddm.item}}
            <a
              {{action 'gettingStarted'}}
              href={{concat url '/getting-started/beginner'}}
              class='nav-button dropdown-item'
            >getting started</a>
          {{/ddm.item}}
          {{#ddm.item}}
            <a
              {{action 'guides'}}
              href={{concat url '/guides/root'}}
              class='nav-button dropdown-item'
            >guides</a>
          {{/ddm.item}}
          {{#ddm.item}}
            <a
              {{action 'docs'}}
              href={{concat url '/d/ /views/0'}}
              class='nav-button dropdown-item'
            >projects</a>
          {{/ddm.item}}
          {{#ddm.item}}
            <a
              {{action 'examples'}}
              href={{concat url '/examples'}}
              class='nav-button dropdown-item'
            >examples</a>
          {{/ddm.item}}

          {{#ddm.item}}
            <a
              {{action 'docs'}}
              href={{concat
                url
                '/d/'
                sessionAccount.currentUserName
                '/views/0'
              }}
              class='nav-button dropdown-item'
            >my projects</a>
          {{/ddm.item}}
        {{/dd.menu}}
      {{/nav.dropdown}}
    {{else}}


      {{#nav.dropdown as |dd|}}
        {{#dd.toggle class='nav-dropdown'}}
          explore
          <span class='caret'></span>{{/dd.toggle}}
        {{#dd.menu as |ddm|}}
          {{#ddm.item}}
            <a
              {{action 'examples'}}
              href={{concat url '/examples/root'}}
              class='nav-button dropdown-item'
            >examples</a>
          {{/ddm.item}}
          {{#ddm.item}}
            <a
              {{action 'docs'}}
              href={{concat url '/d/ /views/0'}}
              class='nav-button dropdown-item'
            >projects</a>
          {{/ddm.item}}
        {{/dd.menu}}
      {{/nav.dropdown}}
      {{#nav.dropdown as |dd|}}
        {{#dd.toggle class='nav-dropdown'}}
          learn
          <span class='caret'></span>{{/dd.toggle}}
        {{#dd.menu as |ddm|}}
          {{#ddm.item}}
            <a
              {{action 'gettingStarted'}}
              href={{concat url '/getting-started/beginner'}}
              class='nav-button dropdown-item'
            >getting started</a>
          {{/ddm.item}}
          {{#ddm.item}}
            <a
              {{action 'guides'}}
              href={{concat url '/guides/root'}}
              class='nav-button dropdown-item'
            >guides</a>
          {{/ddm.item}}
        {{/dd.menu}}
      {{/nav.dropdown}}
      {{#if session.isAuthenticated}}
        {{#nav.dropdown as |dd|}}
          {{#dd.toggle class='nav-dropdown'}}my projects
            <span class='caret'></span>{{/dd.toggle}}
          {{#dd.menu as |ddm|}}
            {{#each ownedDocuments as |doc|}}
              {{#ddm.item}}
                <a
                  class='dropdown-item'
                  {{action 'openDoc' doc.id}}
                >{{doc.name}}</a>
              {{/ddm.item}}
            {{/each}}
            <a
              id='create-doc-dropdown-item'
              class='dropdown-item'
              {{action 'allDocs'}}
            >...</a>
            <a
              id='create-doc-dropdown-item'
              class='dropdown-item'
              {{action 'createDoc'}}
            >+</a>
          {{/dd.menu}}
        {{/nav.dropdown}}
      {{/if}}
    {{/if}}
  {{/bs-nav}}
  {{#if session.isAuthenticated}}
    <div id='login-container'>
      <div style='float:right;' class='tooltip'>
        <a
          {{action 'logout'}}
          class='login-button'
        >log out</a>
        <span class='tooltiptext'>logged in as
          {{sessionAccount.currentUserName}}</span>
      </div>
    </div>
  {{else}}
      <a {{action 'login'}} class='login-button'>Login</a>
  {{/if}}
</div>
