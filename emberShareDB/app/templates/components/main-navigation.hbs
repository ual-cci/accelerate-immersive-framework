{{else}}
{{#nav.dropdown as |dd|}}
  {{#dd.toggle class = "nav-dropdown" }} about <span class="caret"></span>{{/dd.toggle}}
  {{#dd.menu as |ddm|}}
    {{#ddm.item}}
    <a {{action 'about'}} href = {{concat url "/onAbout"}}  class = "nav-button dropdown-item">about</a>
    {{/ddm.item}}
    {{#ddm.item}}
    <a {{action 'people'}}  href = {{concat url "/people"}} class = "nav-button dropdown-item">people</a>
    {{/ddm.item}}
  {{/dd.menu}}
{{/nav.dropdown}}
  {{#nav.dropdown as |dd|}}
    {{#dd.toggle class = "nav-dropdown" }} explore <span class="caret"></span>{{/dd.toggle}}
    {{#dd.menu as |ddm|}}
      {{#ddm.item}}
      <a {{action 'docs'}} href = {{concat url "/d/ /views/0"}}  class = "nav-button dropdown-item">projects</a>
      {{/ddm.item}}
      {{#ddm.item}}
      <a {{action 'inputs'}} href = {{concat url "/inputs"}} class = "nav-button dropdown-item">inputs</a>
