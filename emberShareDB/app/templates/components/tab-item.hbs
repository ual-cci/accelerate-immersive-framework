<div class = "tab-item" id = {{tabID}}>
  {{#if isSelected}}
  {{#bs-button
    role = "button" tabIndex = "0"
    class = "tab-btn selected-tab"
  onClick=(action 'onSelect') }}
  {{name}}
  {{/bs-button}}
  {{else}}
  {{#bs-button class = "tab-btn"
  role = "button" tabIndex = "0"
  onClick=(action 'onSelect') }}
  {{name}}
  {{/bs-button}}
  {{/if}}
  {{#if canDelete}}
    {{#bs-button class = "tab-delete-btn"
    role = "button" tabIndex = "0" 
    onClick=(action 'onDelete')
    icon="glyphicon glyphicon-remove"}}
    {{/bs-button}}
  {{/if}}
</div>
