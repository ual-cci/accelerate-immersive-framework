{{#if options.isImage}}
<img class = "preview-image" src = {{options.assetURL}}/>
{{/if}}
{{#if options.isAudio}}
<audio controls>
 <source src={{options.assetURL}}>
Your browser does not support the audio element.
</audio>
{{/if}}
{{#if options.isVideo}}
<video class = "preview-video" loop autoplay controls="true" type={{options.assetType}}>
  <source src={{options.assetURL}}>
  Your browser does not support the video tag.
</video>
{{/if}}
<a href = {{options.assetURL}}>Download</a>
