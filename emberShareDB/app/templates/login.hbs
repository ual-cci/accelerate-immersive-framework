<div id = "main-login-container" class = "limited-width-container">
<form {{action 'authenticate' on='submit'}}>
  <ui class="list-group">
    <li class="list-group-item">
      <label class = "login-label" for="identification">Username</label>
      {{input class = "login-input" id='identification' placeholder='Enter Login' value=identification}}
    </li>
    <li class="list-group-item">
      <label class = "login-label" for="password">Password</label>
      {{input class = "login-input" id='password' placeholder='Enter Password' type='password' value=password}}
    </li>
  </ui>
  <p><button class = "login-btn" type="submit">Login</button></p>
  {{#if loginErrorMessage}}
    <p>{{loginErrorMessage}}</p>
  {{/if}}
</form>
<form {{action 'createNewUser' on='submit'}}>
  <ui class="list-group">
    <li class="list-group-item">
      <label class = "login-label" for="newUsername">Username</label>
      {{input class = "login-input" id='newUsername' placeholder='Username' value=newUsername}}
    </li>
    <li class="list-group-item">
      <label class = "login-label" for="newUserEmail">Email (optional)</label>
      {{input class = "login-input" id='newUserEmail' placeholder='Email' value=newUserEmail}}
      <p style = "margin:10px 10px 0px 10px;">****If you do not give an email you will not be able to reset your password****</p>
    </li>
    <li class="list-group-item">
      <label class = "login-label" for="newUserPassword">Password</label>
      {{input class = "login-input" id='newUserPassword' placeholder='Enter Password' type='password' value=newUserPassword}}
    </li>
    <li class="list-group-item">
      <label class = "login-label" for="newUserPasswordAgain">Password (again)</label>
      {{input class = "login-input" id='newUserPasswordAgain' placeholder='Enter Password (again)' type='password' value=newUserPasswordAgain}}
    </li>
  </ui>
    <p><button class = "login-btn" type="submit">Create New User</button></p>
  {{#if registerMessage}}
    <p>{{registerMessage}}</p>
  {{/if}}
</form>
<form {{action 'resetPassword' on='submit'}}>
  <ui class="list-group">
    <li class="list-group-item">
      <label class = "login-label" for="resetUsername">Username</label>
      {{input class = "login-input" id='resetUsername' placeholder='Username' value=resetUsername}}
    </li>
  </ui>
  <p><button class = "login-btn" type="submit">Reset Password</button></p>
  {{#if resetMessage}}
    <p>{{resetMessage}}</p>
  {{/if}}
</form>
</div>
