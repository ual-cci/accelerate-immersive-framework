</div>
<div class = "container-fluid" id = "document-container">
  <div class = "row">
    {{#each model.docs as |document index|}}
        {{document-list-item
          document=document
          index=index
          onOpen=(action 'openDocument' document.documentId)
          onDelete=(action 'deleteDocument' document.documentId)
        }}
    {{/each}}
  </div>
  <div id = "page-nav-container">
  {{#if canGoBack}}
    <button role = "button" tabIndex = "0"
    class = "pagination-button"
    id = "prev-page-btn" {{action "prevPage"}}>Previous</button>
  {{/if}}
  {{#if canGoForwards}}
    <button role = "button" tabIndex = "0"
    class = "pagination-button"
    id = "next-page-btn"  {{action "nextPage"}}>Next</button>
  {{/if}}
  </div>
</div>
</div>
