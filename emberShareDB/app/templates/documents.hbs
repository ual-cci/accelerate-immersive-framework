<div id = "main-document-container" class = "limited-width-container">
<form {{action 'search' on='submit'}}>
  {{input role = "form" id='searchTerm'
  class = "limited-width-container"
  placeholder='search'
  value=initialSearchValue
  key-down=(action "search")}}
  <label for="searchTerm" style = "color:transparent;">search bar</label>
</form>
<div class = "row" id = "doc-create-container">
</div>
{{#if feedbackMessage}}
  <label>{{feedbackMessage}}</label>
{{/if}}
{{#if hasNoDocuments}}
  <h2 style = "text-align:center;">No Results</h2>
{{/if}}
<div id = "filter-container">
{{#if mediaQueries.isXs}}
<div class = "row">
  {{#each showingFilters as |filter index|}}
  <div class = "col-xs-6 filter-col filter-col-xs">
    {{filter-item role = "button" tabIndex = "0" filter=filter onFilter = (action 'filter' filter) isSelected = filter.isSelected}}
  </div>
  {{/each}}
  {{#if isMore}}
  <div class = "col-xs-6 filter-col filter-col-xs">
    <div role = "button" tabIndex = "0"
    class = "filter-item load-more-item"
    onkeypress={{action 'loadMore' 2}}
    onclick={{action 'loadMore' 2}}>
      <p class = "filter-text">More...</p>
    </div>
  </div>
  {{else}}
  <div class = "col-xs-2 filter-col filter-col-lg">
    <div role = "button" tabIndex = "0"
    class = "filter-item load-more-item"
    onkeypress={{action 'loadLess'}}
    onclick={{action 'loadLess'}}>
      <p class = "filter-text">Less...</p>
    </div>
  </div>
  {{/if}}
</div>
{{else if mediaQueries.isSm}}
