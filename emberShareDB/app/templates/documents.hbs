<div class = "document-container">
<form {{action 'search' on='submit'}}>
  {{input id='searchTerm' placeholder='search' value=searchTerm key-press="search"}}
</form>
<div class = "row" id = "doc-create-container">
{{#if session.isAuthenticated}}
  <div class = "col-sm-9" id = "create-doc-form-container">
    <form id = "create-doc-form" {{action 'createNewDocument' on='submit'}}>
      {{input id='create-doc-name' placeholder='document name' value=docName}}
    </form>
  </div>
  <div class = "col-sm-3" id = "create-doc-btn-container">
    <button type="submit" id = "create-doc-btn">create</button>
    {{#bs-button onClick=(action 'isPrivateChanged') id ="private-btn"}}{{isPrivateText}}{{/bs-button}}
  </div>
{{else}}
  <div id = "create-doc-placeholder"></div>
{{/if}}
</div>
{{#if feedbackMessage}}
  <label>{{feedbackMessage}}</label>
{{/if}}
{{#if hasNoDocuments}}
  <h2 style = "text-align:center;">No Results</h2>
{{/if}}
<div id = "filter-container container-fluid">
{{#if mediaQueries.isXs}}
<div class = "row">
  {{#each showingFilters as |filter index|}}
  <div class = "col-xs-6 filter-col">
    <div class = {{concat "filter-item " filter.id}}  onclick={{action 'filter' filter}}>
      <p class = "filter-text">{{filter.title}}</p>
    </div>
  </div>
  {{/each}}
  <div class = "col-xs-6 filter-col">
    <div class = "filter-item load-more-item" onclick={{action 'loadMore' 2}}>
      <p class = "filter-text">Load More</p>
    </div>
  </div>
</div>
{{else if mediaQueries.isSm}}
<div class = "row" id = "filter-row">
  {{#each showingFilters as |filter index|}}
  <div class = "col-xs-4 filter-col">
    <div class = {{concat "filter-item " filter.id}} onclick={{action 'filter' filter}}>
      <p class = "filter-text">{{filter.title}}</p>
    </div>
  </div>
  {{/each}}
  <div class = "col-xs-4 filter-col">
    <div class = "filter-item load-more-item" onclick={{action 'loadMore' 3}}>
      <p class = "filter-text">Load More</p>
    </div>
  </div>
</div>
{{else if mediaQueries.isMd}}
<div class = "row" id = "filter-row">
  {{#each showingFilters as |filter index|}}
  <div class = "col-xs-3 filter-col">
    <div class = {{concat "filter-item " filter.id}}  onclick={{action 'filter' filter}}>
      <p class = "filter-text">{{filter.title}}</p>
    </div>
  </div>
  {{/each}}
  <div class = "col-xs-3 filter-col">
    <div class = "filter-item load-more-item" onclick={{action 'loadMore' 4}}>
      <p class = "filter-text">Load More</p>
    </div>
  </div>
</div>
{{else}}
<div class = "row" id = "filter-row">
  {{#each showingFilters as |filter index|}}
  <div class = "col-xs-2 filter-col">
    <div class = {{concat "filter-item " filter.id}}  onclick={{action 'filter' filter}}>
      <p class = {{concat "filter-text " "filter-text-" filter.id}}>{{filter.title}}</p>
    </div>
  </div>
  {{/each}}
  <div class = "col-xs-2 filter-col">
    <div class = "filter-item load-more-item" onclick={{action 'loadMore' 6}}>
      <p class = "filter-text">Load More</p>
    </div>
  </div>
</div>
{{/if}}
</div>
<div class = "container-fluid">
  <div class = "row">
    {{#each model as |document index|}}
        {{document-list-item
          document=document
          index=index
          onOpen=(action 'openDocument' document.documentId)
          onDelete=(action 'deleteDocument' document.documentId)
        }}
    {{/each}}
  </div>
  <div id = "page-nav-container">
  {{#if canGoBack}}
    <button id = "prev-page-btn" {{action "prevPage"}}>Previous Projects</button>
  {{/if}}
  {{#if canGoForwards}}
    <button id = "next-page-btn"  {{action "nextPage"}}>More Projects</button>
  {{/if}}
  </div>
</div>
</div>
